{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "globals.d.ts"],
    "paths": {
      "@generated/*": ["src/generated/*"],
      "@models/*": ["src/models/*"],
      "@resolvers/*": ["src/resolvers/*"],
      "@permissions/*": ["src/permissions/*"],
      "@scalars/*": ["src/scalars/*"],
      "@utils/*": ["src/utils/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
